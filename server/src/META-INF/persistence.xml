<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="PersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>evaluationserver.entities.Role</class>
    <class>evaluationserver.entities.Solution</class>
    <class>evaluationserver.entities.Category</class>
    <class>evaluationserver.entities.File</class>
    <class>evaluationserver.entities.Language</class>
    <class>evaluationserver.entities.SystemReply</class>
    <class>evaluationserver.entities.User</class>
    <class>evaluationserver.entities.Competition</class>
    <class>evaluationserver.entities.UserGroup</class>
    <class>evaluationserver.entities.Task</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/evaluationserver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
